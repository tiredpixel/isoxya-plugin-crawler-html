version: "2.4"
services:
  #-----------------------------------------------------------------------------
  plug:
    image: docker.io/tiredpixel/isoxya-plugin-crawler-html.build:unstable
    init: true
    volumes:
      - ./lib:/home/x/repo/lib
      - ./src:/home/x/repo/src
      - ./test:/home/x/repo/test
      #
      - ./isx-plug-crawler-html.cabal:/home/x/repo/isx-plug-crawler-html.cabal
    networks:
      plug:
        aliases:
          - crawler-html.plugin.dev.isoxya.com
    restart: on-failure
  #-----------------------------------------------------------------------------
networks:
  plug:
    external: true
    name: isoxya_plug
